<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.viewsforum.viewsforum.Dao.UserDao">
    <!-- 根据邮箱查询用户-->
    <select id="findUserByEmail" parameterType="String" resultType="User">
        select *
        from user
        where email=#{email}
    </select>
    <!-- 根据用户名查询用户-->
    <select id="findUserByUserName" parameterType="String" resultType="User">
        select *
        from user
        where user_name=#{userName}
    </select>
    <!-- 添加用户-->
    <insert id="addNewUser" parameterType="User">
        insert into user(userid, user_name, password, email)
        values (#{userID},#{userName},#{password},#{email})
    </insert>
    <!-- 根据用户名与密码查询用户-->
    <select id="findUserByUserNameAndPassword" parameterType="User" resultType="User">
        select *
        from user
        where user_name=#{userName} and password=#{password}
    </select>
    <!-- 根据用户ID与密码修改密码-->
    <update id="changePasswordByUserIDAndPassword" parameterType="User">
        update user
        set password=#{password}
        where userid=#{userID}
    </update>
    <!-- 根据用户名与邮箱查询用户-->
    <select id="findUserByUserNameAndEmail" parameterType="User" resultType="User">
        select *
        from user
        where user_name=#{userName} and email=#{email}
    </select>
    <!-- 根据用户ID查询用户-->
    <select id="findUserByUserID" parameterType="Integer" resultType="User">
        select *
        from user
        where userid=#{userID}
    </select>
</mapper>