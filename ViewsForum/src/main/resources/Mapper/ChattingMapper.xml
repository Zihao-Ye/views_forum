<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.viewsforum.viewsforum.Dao.ChattingDao">
    <!-- 插入新消息条目 -->
    <insert id="addNewMessage" parameterType="Chat">
        insert into chat(chatid,sendid,receiveid,chat_content,send_time)
        values (#{chatID},#{sendID},#{receiveID},#{chatContent},#{sendTime})
    </insert>

    <select id="getChattingMessageByUserID" parameterType="Integer" resultType="Chat">
        select * from chat
        where sendid=#{uid} and receiveid=#{toUid}
    </select>

</mapper>